---
import Layout from "../layouts/Layout.astro";
import { readdir } from "node:fs/promises";
import { parse } from "node:path";
import { Shell } from "@viole.in/sketch";
const pagesDir = `${process.cwd()}/node_modules/@viole.in/sketch/sketch`;
const url = new URL(pagesDir, import.meta.url);
const entries = await readdir(url, { withFileTypes: false });
const s = entries.map((e) => parse(e).name);
console.log(s);
---

<Layout title="sketch">
  <h1>sketch</h1>
  <q><s>messing</s> musing with canvas</q>
  {s.map((el) => <Shell client:only="svelte" file={el} />)}
  <a href="/devlog:sketch">/dev/log:sketch</a>
</Layout>
