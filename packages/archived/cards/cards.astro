---
import { Cards } from "@/components/divs.jsx";
import Layout from "@/layouts/Layout.astro";
---

<Layout span="row">
  <Cards client:load />
</Layout>

<style is:global>
  .spin {
    animation: spin 1s linear infinite;
    transform: rotate(0deg);
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(180deg);
    }
  }
  .hover {
    transform: translateY(-80vh) scale(2) rotateY(180deg) rotateX(360deg) !important;
    background-color: "red" !important;
  }
</style>
