---
import Layout from "@/layouts/Layout.astro";
import { Marks as M } from "@/lib/marks.jsx";
import { q } from "@viole.in/logseq";

const marks = await q([
  "(and (property :marks) (not (property :template)))",
]).then((r) => r.map((e) => e.properties));
---

<Layout>
  <h2>Marks</h2>
  <p>
    Smol <a href="https://twitter.com/raunofreiberg/status/1653471349854093327"
      >bookmark</a
    > site powered by logseq.
  </p>
  <hr />
  <M marks={marks} />
  <hr />
  <p>
    <a href={`${Astro.url.origin}/about/marks`}>Built with logseq queries.</a>
  </p>
</Layout>
