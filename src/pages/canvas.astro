<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        html,
        body {
            width: 100%;
            height: 100%;
            margin: 0;

            /* Prevent document pinch-zoom & touch-hold-to-highlight */
            touch-action: none;

            -webkit-touch-callout: none;
            /* iOS Safari */
            -webkit-user-select: none;
            /* Safari */
            -khtml-user-select: none;
            /* Konqueror HTML */
            -moz-user-select: none;
            /* Old versions of Firefox */
            -ms-user-select: none;
            /* Internet Explorer/Edge */
            user-select: none;
            /* Non-prefixed version, currently supported by Chrome, Edge, Opera and Firefox */
        }
    </style>

</head>

<body>
    <canvas id="canvas"></canvas>
    <script is:inline>
        // get our canvas element
        let circleMutable = [0, 0, 5, 0, 2*Math.PI, 0, 1];
        const canvas = document.getElementById("canvas");
        const c = canvas.getContext("2d");
        function clear() {
            c.fillstyle = "#fff";
            c.fillRect(0, 0, canvas.width, canvas.height);
        }
        function draw (circle) {
            console.log(circle, circleMutable);
            clear();
            canvas.width = document.body.clientWidth;
            canvas.height = document.body.clientHeight;
        // list of all strokes drawn
            c.translate(canvas.width/2, canvas.height/2);
            c.arc(...circle);
            circleMutable=circle;
            c.stroke();
        }
        draw(circleMutable);
        canvas.addEventListener("resize", draw)
        canvas.addEventListener("wheel", (e) => {
            console.log(e.deltaX, e.deltaY);
            draw([circleMutable[0] + e.deltaX, circleMutable[1] + e.deltaY , 5, 0, 2*Math.PI, 0 , 1]);
        })
    </script>
</body>

</html>
